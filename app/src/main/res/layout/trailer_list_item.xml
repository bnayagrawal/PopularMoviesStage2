<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="@dimen/layout_trailer_list_item_margin_bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/trailer_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@color/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/img_trailer_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_trailer_list_item_icon_margin"
        android:layout_marginTop="@dimen/layout_trailer_list_item_icon_margin"
        android:contentDescription="@string/img_trailer_icon_content_description"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trailer_divider"
        app:srcCompat="@drawable/ic_youtube" />

    <TextView
        android:id="@+id/tv_trailer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_trailer_list_item_name_margin_bottom"
        android:layout_marginEnd="@dimen/layout_trailer_list_item_name_margin_end"
        android:layout_marginStart="@dimen/layout_trailer_list_item_name_margin_start"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/img_trailer_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_trailer_icon"
        app:layout_constraintTop_toTopOf="@+id/img_trailer_icon"
        app:layout_constraintVertical_bias="1.0"
        tools:text="Trailer Name" />


</android.support.constraint.ConstraintLayout>